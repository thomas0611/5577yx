@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CardLog</title>
    <link href="~/Scripts/Admin/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Style/Admin/style.css" rel="stylesheet" />
    <link href="~/Style/Admin/pagination.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/AdminFunction.js"></script>
    <script>
        $(document).ready(function () {
            GetAllGame();
            InitPageContent("CardLog");
        });
    </script>
</head>
<body class="mainbody">
    <form id="form1" runat="server">
        <div class="navigation">
            首页 &gt; 新手卡管理&gt; 新手卡领取记录
        </div>
        <div class="tools_box">
            <div class="tools_bar">
                <div class="search_box">
                    <input id="CardNum" class="txtInput" style="width: 150px;" onchange="InitPageContent('CardLog')" />
                    <input type="button" id="btnSearch" value="搜 索" class="btnSearch" onclick="InitPageContent('CardLog')" />
                </div>
            </div>
            <div class="select_box">
                <select id="Selyx" class="select2" onchange="InitPageContent('CardLog')">
                    <option value="0">所有游戏</option>
                </select>
            </div>
        </div>
        <!--列表展示.开始-->
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="msgtable" style="text-align: center">
            <tr>
                <th>ID
                </th>
                <th>用户名
                </th>
                <th>领取时间
                </th>
                <th>所属新手卡
                </th>
                <th>新手卡卡号
                </th>
            </tr>
            <tbody id="CardLog"></tbody>
        </table>
        <!--列表展示.结束-->
        <div class="line15">
        </div>
        <div class="page_box">
            <div id="PageContent" runat="server" class="flickr right">
            </div>
            <div class="left">
                显示<input name="txtPageNum" type="text" value="10" onchange="InitPageContent('CardLog')" onkeyup="this.value=this.value.replace(/\D/g,'')"
                    onafterpaste="this.value=this.value.replace(/\D/g,'')" id="txtPageNum" class="txtInput2 small2" />条/页

            </div>
        </div>
        <div class="line10">
        </div>
    </form>
</body>
</html>
