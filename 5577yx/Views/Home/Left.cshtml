<script>
    $(".userlist_menu li").each(function (i, k) {
        var li = $(this);
        li.mouseover(function () {
            $('.userlist_menu li').removeClass('current');
            $(this).addClass('current');
            $(".list ul").hide().attr("style", 'display: none;');
            $(".list ul:eq(" + i + ")").show().attr("style", 'display: block;');
        });
    });
</script>
