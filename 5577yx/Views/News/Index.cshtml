@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Scripts/Admin/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Style/Admin/style.css" rel="stylesheet" />
    <link href="~/Style/Admin/pagination.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/AdminFunction.js"></script>
    <script>
        $(document).ready(function () {
            GetAllGame();
            InitPageContent("News");
        });
    </script>
</head>
<body class="mainbody">
    <div class="navigation">
        首页 &gt; 内容管理 &gt; 游戏内容管理 &gt; 游戏新闻
    </div>
    <div class="tools_box">
        <div class="tools_bar">
            <div class="search_box">
                <input id="txtKeywords" class="txtInput" value="">
                <input type="button" id="btnSearch" value="搜 索" class="btnSearch" onclick="InitPageContent('News')" />
            </div>
            <a href="AddNews" class="tools_btn" style="@ViewData["Style"]">
                <span><b class="add">添加资讯</b></span></a>
        </div>
        <div class="select_box">
            &nbsp; 类型： &nbsp;
            <select id="ddltype" class="select2" onchange="InitPageContent('News')">
                <option value="0">所有类型</option>
                <option value="2">公告</option>
                <option value="3">攻略</option>
                <option value="4">活动</option>
                <option value="5">资料</option>
            </select>
            &nbsp; 所属游戏： &nbsp;
            <select id="Selyx" class="select2" onchange="InitPageContent('News')">
                <option value="0">所有游戏</option>
            </select>
            &nbsp; 属性： &nbsp;
             <select id="ddlProperty" class="select2" onchange="InitPageContent('News')">
                 <option value="0">所有属性</option>
                 <option value="IsTop">置顶</option>
                 <option value="IsRed">推荐</option>
                 <option value="IsHot">热门</option>
             </select>
        </div>
    </div>
    <!--列表展示.开始-->

    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="msgtable" style="text-align: center">
        <thead>
            <tr>
                <th>标题
                </th>
                <th width="13%">所属游戏
                </th>
                <th width="13%">所属类别
                </th>
                <th width="16%">发布时间
                </th>
                <th width="60">排序
                </th>
                <th width="110">属性
                </th>
                <th width="8%">操作
                </th>
            </tr>
        </thead>
        <tbody id="News">
        </tbody>
    </table>
    <!--列表展示.结束-->
    <div class="line15">
    </div>
    <div class="page_box">
        <div id="PageContent" class="flickr right">
        </div>
        <div class="left">
            显示<input name="txtPageNum" type="text" value="10" onchange="InitPageContent('News')" onkeyup="this.value=this.value.replace(/\D/g,'')"
                onafterpaste="this.value=this.value.replace(/\D/g,'')" id="txtPageNum" class="txtInput2 small2" />条/页

        </div>
    </div>
    <div class="line10">
    </div>
</body>
</html>
