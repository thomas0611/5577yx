@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SysConfig</title>
    <link href="~/Scripts/Admin/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Style/Admin/style.css" rel="stylesheet" />
    <link href="~/Style/Admin/pagination.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/AdminFunction.js"></script>
    <script>
        $(document).ready(function () {
            $("#attachsave").val(@ViewData["attachsave"]);
            $("input[name='watermarktype']").val(@ViewData["watermarktype"]);
            $("input[name='watermarkposition']").val(@ViewData["watermarkposition"]);
            $("#watermarkfont").val('@ViewData["watermarkfont"]');
        });

    </script>
</head>
<body class="mainbody">
    <form id="form1" runat="server">
        <div class="navigation">
            首页 &gt; 系统管理 &gt; 系统参数设置
        </div>
        <div id="contentTab">
            <ul class="tab_nav">
                <li class="selected"><a onclick="tabs('#contentTab',0);" href="javascript:;">网站基本信息</a></li>
                <li><a onclick="tabs('#contentTab',1);" href="javascript:void(0);">附件配置</a></li>
            </ul>
            <div class="tab_con" style="display: block;">
                <table class="form_table">
                    <col width="180px">
                    <col>
                    <tbody>
                        <tr>
                            <th>站点名称：
                            </th>
                            <td>
                                <input id="webname" class="txtInput normal required" maxlength="100" value="@ViewData["webname"]">
                                <label>*</label>
                            </td>
                        </tr>
                        <tr>
                            <th>公司名称：
                            </th>
                            <td>
                                <input id="webcompany" class="txtInput normal required" maxlength="100" value="@ViewData["webcompany"]">
                                <label>*</label>
                            </td>
                        </tr>
                        <tr>
                            <th>网站域名：
                            </th>
                            <td>
                                <input id="weburl" class="txtInput normal required url" maxlength="250" value="@ViewData["weburl"]">
                                <label>*以“http://”开头</label>
                            </td>
                        </tr>
                        <tr>
                            <th>联系电话：
                            </th>
                            <td>
                                <input id="webtel" class="txtInput normal" maxlength="50" value="@ViewData["webtel"]">
                            </td>
                        </tr>
                        <tr>
                            <th>传真号码：
                            </th>
                            <td>
                                <input id="webfax" class="txtInput normal" maxlength="50" value="@ViewData["webfax"]">
                            </td>
                        </tr>
                        <tr>
                            <th>管理员邮箱：
                            </th>
                            <td>
                                <input id="webmail" class="txtInput normal email" maxlength="100" value="@ViewData["webmail"]">
                            </td>
                        </tr>
                        <tr>
                            <th>网站备案号：
                            </th>
                            <td>
                                <input id="webcrod" class="txtInput normal" maxlength="50" value="@ViewData["webcrod"]">
                            </td>
                        </tr>
                        <tr>
                            <th>首页标题(SEO)：
                            </th>
                            <td>
                                <input id="webtitle" class="txtInput normal required" maxlength="250" style="width: 350px;" value="@ViewData["webtitle"]">
                                <label>*自定义的首页标题</label>
                            </td>
                        </tr>
                        <tr>
                            <th>页面关健词(SEO)：
                            </th>
                            <td>
                                <input id="webkeyword" class="txtInput" maxlength="250" style="width: 350px;" value="@ViewData["webkeyword"]">
                                <label>页面关键词(keyword)</label>
                            </td>
                        </tr>
                        <tr>
                            <th>页面描述(SEO)：
                            </th>
                            <td>
                                <textarea id="webdescription" maxlength="250" class="small">@ViewData["webdescription"]</textarea>
                                <label>页面描述(description)</label>
                            </td>
                        </tr>
                        <tr>
                            <th>网站版权信息：
                            </th>
                            <td>
                                <textarea id="webcopyright" maxlength="500" textmode="MultiLine" class="small">@ViewData["webcopyright"]"</textarea>
                                <label>支持HTML格式</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="tab_con">
                <table class="form_table">
                    <col width="180px">
                    <col>
                    <tbody>
                        <tr>
                            <th>附件上传目录：
                            </th>
                            <td>
                                <input id="attachpath" class="txtInput normal required" minlength="2" value="@ViewData["attachpath"]"
                                    maxlength="100">
                                <label>*上传图片或附件的目录，自动创建在网站根目录下</label>
                            </td>
                        </tr>
                        <tr>
                            <th>附件上传类型：
                            </th>
                            <td>
                                <input id="attachextension" class="txtInput normal required" maxlength="250" value="@ViewData["attachextension"]">
                                <label>*以英文的逗号分隔开，如：“jpg,gif,rar”</label>
                            </td>
                        </tr>
                        <tr>
                            <th>附件保存方式：
                            </th>
                            <td>
                                <select id="attachsave" class="select2">
                                    <option value="1">按年月日每天一个目录</option>
                                    <option value="2">按年月/日/存入不同目录</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <th>文件上传大小：
                            </th>
                            <td>
                                <input type="number" id="attachfilesize" class="txtInput small required number"
                                    maxlength="10" value="@ViewData["attachfilesize"]">
                                KB<label>*超过设置的文件大小不予上传，0不限制</label>
                            </td>
                        </tr>
                        <tr>
                            <th>图片上传大小：
                            </th>
                            <td>
                                <input type="number" id="attachimgsize" class="txtInput small required number" maxlength="10"value="@ViewData["attachimgsize"]">
                                KB<label>*超过设置的图片大小不予上传，0不限制</label>
                            </td>
                        </tr>
                        <tr>
                            <th>图片最大尺寸：
                            </th>
                            <td>
                                <input type="number" id="attachimgmaxheight" class="txtInput small2 required digits"
                                    maxlength="10" value="@ViewData["attachimgmaxheight"]">
                                ×
                            <input type="number" id="attachimgmaxwidth" class="txtInput small2 required digits"
                                maxlength="10" value="@ViewData["attachimgmaxwidth"]">
                                px
                            <label>
                                *设置图片高和宽，超出自动裁剪，0为不受限制</label>
                            </td>
                        </tr>
                        <tr>
                            <th>生成缩略图大小：
                            </th>
                            <td>
                                <input type="number" id="thumbnailheight" class="txtInput small2 required digits"
                                    maxlength="10" value="@ViewData["thumbnailheight"]">
                                ×
                            <input type="number" id="thumbnailwidth" class="txtInput small2 required digits"
                                maxlength="10" value="@ViewData["thumbnailwidth"]">
                                px
                            <label>
                                *图片生成缩略图高和宽，0为不生成</label>
                            </td>
                        </tr>
                        <tr>
                            <th>图片水印类型：
                            </th>
                            <td>
                                <input type="radio" value="0" checked="checked" name="watermarktype" />关闭水印
                                <input type="radio" value="1" name="watermarktype" />文字水印
                                <input type="radio" value="2" name="watermarktype" />图片水印
                            </td>
                        </tr>
                        <tr>
                            <th>图片水印位置：
                            </th>
                            <td>
                                <input type="radio" value="1" name="watermarkposition" />左上
                                 <input type="radio" value="2" name="watermarkposition" />中上
                                <input type="radio" value="3" name="watermarkposition" />右上
                                 <input type="radio" value="4" name="watermarkposition" />左中
                                <input type="radio" value="5" name="watermarkposition" />居中
                                 <input type="radio" value="6" name="watermarkposition" />右中
                                <input type="radio" value="7" name="watermarkposition" />左下
                                 <input type="radio" value="8" name="watermarkposition" />中下
                                <input type="radio" value="9" checked="checked" name="watermarkposition" />右下
                            </td>
                        </tr>
                        <tr>
                            <th>图片生成质量：
                            </th>
                            <td>
                                <input type="number" id="watermarkimgquality" class="txtInput small required digits"
                                    maxlength="3" value="@ViewData["watermarkimgquality"]" />
                                <label>*只适用于加水印的jpeg格式图片.取值范围 0-100, 0质量最低, 100质量最高, 默认80</label>
                            </td>
                        </tr>
                        <tr>
                            <th>图片水印文件：
                            </th>
                            <td>
                                <input id="watermarkpic" class="txtInput normal required" maxlength="100" value="@ViewData["watermarkpic"]">
                                <label>*需存放在站点目录下，如图片不存在将使用文字水印</label>
                            </td>
                        </tr>
                        <tr>
                            <th>水印透明度：
                            </th>
                            <td>
                                <input type="number" id="watermarktransparency" class="txtInput small required digits" maxlength="2" max="10" value="@ViewData["watermarktransparency"]">
                                <label>*取值范围1--10 (10为不透明)</label>
                            </td>
                        </tr>
                        <tr>
                            <th>水印文字：
                            </th>
                            <td>
                                <input id="watermarktext" class="txtInput normal required" maxlength="100" value="@ViewData["watermarktext"]">
                                <label>*文字水印的内容</label>
                            </td>
                        </tr>
                        <tr>
                            <th>文字字体：
                            </th>
                            <td>
                                <select id="watermarkfont" class="select2">
                                    <option value="仿宋_GB2312">仿宋_GB2312</option>
                                    <option value="宋体">宋体</option>
                                    <option value="新宋体">新宋体</option>
                                    <option value="楷体_GB2312">楷体_GB2312</option>
                                    <option value="黑体">黑体</option>
                                </select>
                                <input type="number" id="watermarkfontsize" class="txtInput small2 required digits"
                                    maxlength="10" value="@ViewData["watermarkfontsize"]">
                                px
                            <label>
                                *文字水印的字体和大小</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="foot_btn_box">
                <input type="button" id="btnSubmit" value="提交保存" class="btnSubmit" onclick="" />
            </div>
        </div>
    </form>
</body>
</html>
