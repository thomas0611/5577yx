@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>推广员登录</title>
    <link href="~/Scripts/Admin/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Style/sty.css" rel="stylesheet" />
    <link href="~/Style/font-awesome.css" rel="stylesheet" />
    <link href="~/Style/ace.min.css" rel="stylesheet" />
    <link href="~/Style/Admin/pagination.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/jquery.form.js"></script>
    <script src="~/Scripts/Admin/Verify.js"></script>
    <script src="~/Scripts/Admin/AdminFunction.js"></script>
</head>
<body style="background:#1b6aaa;">
    <div class="loginArea" style="background-color:#f7f7f7;">
        <h1><i class="icon icon-desktop blue" style="margin-right:10px;"></i>5577游戏CPS推广管理系统
        </h1>
        <div class="login_box">
            <form method="post" onsubmit="return GameSpreadUserLogin()">
                <div id="login" style="width:300px;">
                    <label class="log_user" for="ID-U-0">
                        @*<span>用户名：</span>*@<input name="UserName" type="text" value="@ViewData["UserName"]" id="UserName" placeholder="账号"></label>
                    <label class="log_password" for="ID-U-1">
                        @*<span>密&nbsp;&nbsp;码：</span>*@
                        <input name="PWD" type="password" id="PWD" value="@ViewData["PWD"]" placeholder="密码"></label>
                    <label class="code_label_position" for="ID-U-2">
                        @*<span>验证码：</span>*@
                        <input name="Code" type="text" id="Code" value="" style="width: 120px;">
                        <img src="../Models/VerifyCode.ashx" width="70" height="22" alt="点击切换验证码" title="点击切换验证码" style="margin-top: 2px; vertical-align: top; cursor: pointer;" onclick="ToggleCode(this, '../Models/VerifyCode.ashx');return false;">
                    </label>
                    @*<input type="submit" name="btnlogin" value="登录" id="btnlogin" class="btn_login">*@
                    <button type="submit" class="btn_login" style="font-size:14px;"><i class="icon icon-key" style="margin-right:3px;"></i>登录</button>
                    <span class="auto_span" title="请勿在公共电脑使用此功能"><span class="ck">
                        <input id="ck1" type="checkbox" name="ck1" checked="checked"></span>
                        <label for="auto_label" style="vertical-align: middle">
                            记住登录</label></span>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
