@{
    Layout = null;
    
}


<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="description" content="Static &amp; Dynamic Tables" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>用户消费记录</title>
<link href="~/Style/ace.min.css" rel="stylesheet" />
<link href="~/Style/bootstrap.min.css" rel="stylesheet" />
<link href="~/Style/font-awesome.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/Admin/jquery.form.js"></script>
<script src="~/Scripts/Admin/md5.js"></script>
<script src="~/Scripts/Admin/Verify.js"></script>
<script src="~/Scripts/Admin/AdminFunction.js"></script>
<script src="~/Scripts/Admin/My97DatePicker/WdatePicker.js"></script>
    <style>
        * {margin:0px;padding:0px;
        }
        li {list-style:none;
        }
    </style>
</head>

<body style="background:#fff; ">
<div class="page-content"  >
  <div class="page-header">
    <h1><i class="icon icon-user"></i>&nbsp;用户消费记录</h1>
  </div>

  <!-- /.page-header -->
<div class="page-header" style="padding-left:0px;">
    <div class="tabbable" >
      <ul class="nav nav-tabs" id="myTab">
        <li class="active"> <a data-toggle="tab" href="#search"> <i class="icon blue icon-search bigger-110"></i> 搜索 </a> </li>
      </ul>
      <div class="tab-content">
        <div id="search" class="tab-pane in active">
          <form class="form-horizontal" id="validation-form"  method="post">
          
            <div class="clearfix" style=" margin-top:10px;">游戏：
                <select id="Selyx" class="select2" @*onchange="InitPageContent('SpreadPay')"*@>
                <option value="0">所有游戏</option>
            </select>
            </div>
            <div class='clearfix' style='margin-top:10px; left:-5px;'>
                <div  style='margin-bottom:5px;width:230px; float:left;'><span class='pull-left' style='line-height:30px'>时间：</span>
                <div class='input-group input-group-sm' >
                <input type='text' id='StartTime' name='t1' class='form-control' value='' onclick="WdatePicker();"/><span class='input-group-addon'> <i class='icon icon-calendar'></i> </span> </div></div><span class='pull-left' style='line-height:30px'>&nbsp;&nbsp;&nbsp;到</span><div class='col-xs-6' style='margin-bottom:5px;width:215px'>
                    <div class='input-group input-group-sm'>
                    <input type='text' id='EndTime' name='t2' class='form-control' value='' onclick="WdatePicker();"/><span class='input-group-addon'> <i class='icon icon-calendar'></i> </span> </div></div><span class='pull-left' style='line-height:30px;color:#666'> </span>
                <input type="button" value="查看" class="btn btn-info btn-sm" onclick="InitPage();" @*onclick="InitPageContent('SpreadPay')"*@ /> 
                <span style="margin-left:10px;">*请选择游戏后点击查看</span>
                <span style="margin-right: 100px;float:right; color: Red;">总业绩：<strong id="SpreadMoney">@ViewData["SpreadMoney"]</strong></span>
            </div>   
          </form>
        </div>
      </div>
        <table style="text-align: center; width: 100%; border: #dcdcdc" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>推广用户 </th>
                        <th>充值时间</th>
                        <th>充值游戏/区服</th>
                        <th>角色名</th>
                        <th>充值金额</th>
                    </tr>
                </thead>
                <tbody id="SpreadPay">
                </tbody>
                <tfoot>
                    <tr class="pagination">
                        @*<td colspan="5"></td>*@
                    </tr>
                </tfoot>
            </table>
        <div class="page_box">
            @*<span>注：角色名为实时查询，切换页数时会有1~2秒延迟，请耐心等待一下。</span>*@
            <div id="PageContent" class="flickr right">
            </div>
            <div class="left">
                <input type="hidden" value="10" id="txtPageNum" />
            </div>
        </div>
    </div>
  </div>
</div>
<!-- /.page-content --> 
<script>
    GetAllGame();
    //InitPageContent('SpreadPay');
    function InitPage() {
        $("#SpreadPay").html("<tr><td colspan=\"5\" style=\"width:100%;height:250px;vertical-align:middle;text-align:center;\"><img src=\"../Scripts/Admin/ui/skins/Aqua/images/tree/loading.gif \" /></td></tr>");
        InitPageContent('SpreadPay');
    }
</script>

</body>
</html>
