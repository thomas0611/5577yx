@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>快速游戏</title>
    <link href="~/Style/sty.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/jquery.form.js"></script>
    <script src="~/Scripts/Admin/Verify.js"></script>
    <script src="~/Scripts/Admin/AdminFunction.js"></script>
    <style type="text/css">
        .bt {
            background-image: url(../images/Tg/dark2-register-btn.gif);
            width: 155px;
            height: 32px;
            border: none;
        }

        form div {
            width: 100%;
            height: 80px;
            margin: 0px;
            padding: 0px;
        }

        form label {
            display: inline-block;
            height: 25px;
            margin-top: 2px;
        }
    </style>
</head>
<body style="background-color: Black">
    <form onsubmit="return GameUserKsReg()" method="post">
        <div>
            <div style="width: 1000px; height: 600px; margin-left: auto; margin-right: auto; margin-top: 10px; background-image: url('../images/Tg/BeiJing.jpg');">
                <div style="width: 380px; height: 180px; margin-left: 95px; margin-top: 380px; float: left; text-align: center; color: aqua">
                    <div style="width: 60px; float: left">
                        <label>用户名：</label><br />
                        <label>密码：</label><br />
                        <label>确认密码：</label><br />
                    </div>

                    <div style="width: 155px; float: left">
                        <input name="UserName" type="text" id="UserName" class="txt1" onblur="VerifyTgUserName()">
                        <input type="hidden" value="@ViewData["Action"]" name="Action" />
                        <input name="PWD" type="password" id="PWD" class="txt1" onblur="VerifyTgPWD()" maxlength="16">
                        <input type="password" id="PWDAgain" name="PWDAgain" class="txt1" maxlength="16" onblur="VerifyTgPWDAgain()">
                    </div>

                    <div style="width: 150px; float: left">
                        <span id="TgMsg" class="msg">长度为6～16位，由字母开头、数字组成</span>
                    </div>

                    <input type="submit" id="bt" class="bt" value="" />
                </div>
            </div>
        </div>
    </form>
</body>
</html>
