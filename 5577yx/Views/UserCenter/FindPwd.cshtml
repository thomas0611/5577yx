@{
    ViewBag.Title = "找回密码";
    Layout = "~/Views/MainLayout.cshtml";
}

<div id="codecontent">
    <h1>找回密码
    </h1>
    <div class="codemain">
        <div class="title">
            <h2>通过邮件找回密码</h2>
        </div>
        <table cellpadding="0" cellspacing="0" width="48%" border="0">
            <tbody>
                <tr>
                    <td colspan="3">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="red"></font>
                    </td>
                </tr>
                <tr height="50">
                    <td>
                        <label>用户名：</label></td>
                    <td>
                        <input name="UserName" type="text" id="UserName" class="txt1"></td>
                    <td style="text-align: left"><em>*</em><span id="UserNameMsg" class="msg">请输入您的用户名</span></td>
                </tr>
                <tr height="50">
                    <td>
                        <label>验证码：</label></td>
                    <td>
                        <input name="Code" type="text" id="Code" value="" style="width: 80px;" onblur="VerifyCode()">
                        <img src="../Models/VerifyCode.ashx" width="70" height="22" alt="点击切换验证码" title="点击切换验证码" style="margin-top: 2px; vertical-align: top; cursor: pointer;" onclick="ToggleCode(this, '../Models/VerifyCode.ashx');return false;">
                    </td>
                    <td style="text-align: left"><em>*</em> <span id="CodeMsg" class="msg">请输入正确的验证码。</span></td>
                </tr>
                <tr height="50">
                    <td colspan="2" align="center">
                        <input type="submit" name="btnlogin" value="下一步" id="btnlogin" class="next" onclick="FindPwd()">
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
