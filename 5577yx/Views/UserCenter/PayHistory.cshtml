@{
    ViewBag.Title = "充值历史";
    Layout = "~/Views/UserCenter/UserCenterLayout.cshtml";
}
<div id="chright">
    <div class="user_center_content">
        <div class="user_center_content_inner">
            <div class="user_center_content_title">
                充值历史
            </div>
            <div class="session session_first" style="padding-top: 0px; margin-top: 0px; padding-bottom: 20px">
                <div class="board board_yes" style="width: 670px;">
                    <span class="user_center_icon yes"></span><span class="board_item czBoardItem">钻石余额：@ViewData["Money"]</span>
                    <span class="board_item czBoardItem">如果您对账户明细存在任何疑问，请联系 在线客服 或拨打客服热线：400-009-4577 咨询</span>
                </div>
            </div>
            <div class="session session_first session_time" style="padding-top: 0px; padding-left: 0px; padding-bottom: 0px;">
            </div>
            <div class="chargeList">
                <div class="ultop">
                    <ul>
                        <li class="current"><a>充值记录</a></li>
                        <li><a>消费记录</a></li>
                    </ul>
                </div>
                <div class="area">
                    <table style="text-align: center; width: 100%; border: #dcdcdc" class="paydetail_table">
                        <thead>
                            <tr>
                                <th align="center" width="160">充值时间
                                </th>
                                <th align="center" width="140">订单号
                                </th>
                                <th align="center" width="120">充值金额
                                </th>
                                <th align="center">充值对象
                                </th>
                                <th align="center" width="140">状态
                                </th>
                            </tr>
                        </thead>
                        <tbody id="PayHistory1"></tbody>
                        <tfoot>
                            <tr class="pagination">
                                <td colspan="5" align="center"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="area" style="display: none;">
                    <table class="paydetail_table" style="text-align: center; width: 100%; bordercolor: #dcdcdc">
                        <thead>
                            <tr>
                                <th align="center" width="160">消费时间
                                </th>
                                <th align="center" width="140">消费金额
                                </th>
                                <th align="center">消费对象
                                </th>
                            </tr>

                        </thead>
                        <tbody id="PayHistory2"></tbody>
                        <tfoot>
                            <tr class="pagination">
                                <td colspan="3" align="center"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="page1" style="width: 650px; margin-bottom: 1px;">
                    <div id="PageContent" class="flickr right">
                    </div>
                    <input type="hidden" id="txtPageNum" value="10" />
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    InitPageContent("PayHistory1");
    $(".ultop ul li").each(function (i, k) {
        var li = $(this);
        li.click(function () {
            $('.ultop ul li').removeClass('current');
            li.addClass('current');
            $(".chargeList .area").hide().attr("style", 'display: none;');
            $(".chargeList .area:eq(" + i + ")").show().attr("style", 'display: block;');
            if (i == 0) {
                InitPageContent("PayHistory1");
            } else {
                InitPageContent("PayHistory2");
            }
        });
    });
</script>
