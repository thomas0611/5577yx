    <div class="wrap index">
    	<div class="top">
            <div class="news-box">
                <ul>
                    @foreach (var n in ViewData["NewsList"] as List<Game.Model.News>)
                    {
                        <li><span class="sprite square"></span><a href="/NewsCenter/News?N=@n.Id">@n.Title<i></i></a></li>
                    }
                    
                </ul>
            </div>
            <div class="kaifu"></div>
